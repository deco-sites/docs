{
  "name": "@decocms/docs",
  "version": "1.0.0",
  "description": "DecoCMS documentation",
  "scripts": {
    "dev": "concurrently \"bun run dev:client\" \"NODE_ENV=development bun --hot run server/main.ts\"",
    "dev:client": "astro dev",
    "build": "bun run build:client && bun run build:server",
    "build:client": "astro build",
    "check": "astro sync > /dev/null 2>&1 && tsc --noEmit",
    "build:server": "NODE_ENV=production bun build server/main.ts --target=bun --outfile=dist/server/main.js",
    "start": "NODE_ENV=production bun run dist/server/main.js"
  },
  "dependencies": {
    "@astrojs/mdx": "^4.3.1",
    "@astrojs/react": "^4.3.0",
    "@tailwindcss/vite": "^4.0.7",
    "astro": "^5.6.1",
    "lucide-react": "^0.525.0",
    "react": "^19.2.0",
    "react-dom": "^19.1.0",
    "tailwindcss": "^4.0.7",
    "typescript": "^5.9.3",
    "@decocms/runtime": "^1.2.1"
  },
  "devDependencies": {
    "@tailwindcss/typography": "^0.5.16",
    "concurrently": "^9.2.1",
    "typescript": "^5.9.3"
  },
  "engines": {
    "node": ">=22.0.0"
  }
}
